# Streamlit Cloud Secrets Configuration
# Copy this file to secrets.toml and fill in your values
# Upload to Streamlit Cloud via Settings > Secrets

[model]
# Path to model file (can be uploaded to Streamlit Cloud or loaded from URL)
MODEL_PATH = "models/streamlit_run/best_model.pth"
MODEL_URL = ""  # Optional: URL to download model from

[inference]
DEVICE = "cpu"  # Use "cpu" for Streamlit Cloud (no GPU support)
TOP_K = 5
CONFIDENCE_THRESHOLD = 0.5

[app]
MAX_UPLOAD_SIZE_MB = 50
ALLOWED_EXTENSIONS = "jpg,jpeg,png"
ENABLE_GRADCAM = true

[logging]
LOG_LEVEL = "INFO"
